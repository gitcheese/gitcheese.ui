{
  "extends": "standard",
  "env": {
    "browser": true
  },
  "plugins": [
    "html",
    "standard",
    "promise"
  ],
  "rules": {
    "no-var": "off",
    "new-cap": ["error", { "capIsNewExceptions": ["Polymer"] }],
    "semi": [2, "always"],
    "space-before-function-paren": ["error", {
      "anonymous": "ignore",
      "named": "ignore",
      "asyncArrow": "ignore"
    }]
  },
  "globals": {
    "Polymer": true
  }
}
